@page "/Menu/index"
@using Caviar.UI.Helper;

<TableData TData="SysPowerMenu" DataSource="DataSource"></TableData>


@code{   

    [Inject]
    HttpHelper Http { get; set; }

    public List<SysPowerMenu> DataSource { get; set; }

    protected override async Task OnInitializedAsync()
    {
        var powerList = await Http.GetJson<List<SysPowerMenu>>("Menu/GetLeftSideMenus");
        DataSource = powerList.Data;
    }
}