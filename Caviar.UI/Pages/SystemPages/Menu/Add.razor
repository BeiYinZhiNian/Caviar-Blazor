@page "/Menu/add"


<Form Model="@model">
    <FormItem Label="菜单名称">
        <Input @bind-Value="@context.MenuName"/>
    </FormItem>
    <FormItem Label="菜单类型">
        <RadioGroup @bind-Value="@context.MenuType">
            <Radio Value="(MenuType)1">目录</Radio>
            <Radio Value="(MenuType)2">菜单</Radio>
            <Radio Value="(MenuType)3">按钮</Radio>
        </RadioGroup>
    </FormItem>
</Form>
