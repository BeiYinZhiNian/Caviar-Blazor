@inherits DataComponentBase<ApplicationUserView,ApplicationUser>

<Form @ref="_meunForm" 
    LabelColSpan="6"
    WrapperColSpan="16"
    Model="@DataSource" 
    OnFinish="FormSubmit" 
    ValidateMode="@FormValidateMode.Rules" 
    ValidateOnChange="true">
    <CavFormItem  FieldName='UserName' FieldRules='@context.Entity'>
        <Input DebounceMilliseconds="-1"@bind-Value='@context.Entity.UserName' />
    </CavFormItem>
    <CavFormItem  FieldName='AccountName' FieldRules='@context.Entity'>
        <Input DebounceMilliseconds="-1"@bind-Value='@context.Entity.AccountName' />
    </CavFormItem>
    <CavFormItem  FieldName='Email' FieldRules='@context.Entity'>
        <Input DebounceMilliseconds="-1"@bind-Value='@context.Entity.Email' />
