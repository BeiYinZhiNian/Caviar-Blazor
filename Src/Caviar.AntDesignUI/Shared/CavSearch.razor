

<InputGroup Compact>
    <SimpleSelect Placeholder="请选择查询的字段" Style="width: 50%;" @bind-Value="QueryModel.Key">
        <SelectOptions>
            @if (Fields != null)
            {
                foreach (var item in Fields)
                {
                    if (item.IsPermission && item.Entity.IsPanel && item.EntityType.ToLower() == "string")
                    {
                        <SimpleSelectOption Value="@item.Entity.FieldName" Label="@item.DisplayName"></SimpleSelectOption>
                    }
                }
            }
        </SelectOptions>
    </SimpleSelect>
    <Input TValue="string" @bind-Value="QueryModel.Value" Placeholder="请输入想要搜索的内容"/>
    <Button OnClick="OnSearch" Type="@ButtonType.Primary" Loading="Loading">搜索</Button>
</InputGroup>