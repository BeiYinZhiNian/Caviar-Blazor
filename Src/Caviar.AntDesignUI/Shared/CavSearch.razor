

<InputGroup Compact>
      <SimpleSelect Placeholder="请选择查询的字段" Style="width: 50%;" @bind-Value="QueryModel.Key">
          <SelectOptions>
            @if (Fields != null)
            {
                foreach(var item in Fields)
                {
                    if (item.IsPermission && item.Entity.IsPanel)
                    {
                        <SimpleSelectOption Value="@item.Entity.FieldName" Label="@item.DisplayName"></SimpleSelectOption>
                    }
                }
            }
        </SelectOptions>
      </SimpleSelect>
      <Search Loading="Loading" Placeholder="请输入查询内容" @bind-Value="QueryModel.Value" EnterButton="true" OnSearch="OnSearch"/>               
</InputGroup>