@page "/Setting/WebConfig"
@implements IReuseTabsPage

﻿<Card Title=@UserConfig.LanguageService[$"{CurrencyConstant.Page}.WebConfig"] Bordered Hoverable>
    <ChildContent>
        <Row>
            <Space>
                <SpaceItem>
                    <Text>手风琴模式：</Text>
                </SpaceItem>
                <SpaceItem>
                    <Tooltip Title="@("点击菜单，收起其他展开的所有菜单，保持菜单聚焦简洁。")">
                        <Switch @bind-Checked="UserConfig.Accordion" />
                    </Tooltip>
                </SpaceItem>
            </Space>
        </Row>
        <Row Style="margin-top:20px">
            <Space>
                <SpaceItem>
                    <Text>Table页：</Text>
                </SpaceItem>
                <SpaceItem>
                    <Switch @bind-Checked="UserConfig.IsTable"/>
                </SpaceItem>
            </Space>
        </Row>
        <Row Style="margin-top:20px">
            <Space>
                <SpaceItem>
                    <Text>登录图片：</Text>
                </SpaceItem>
                <SpaceItem>
                    <Text>敬请期待</Text>
                </SpaceItem>
            </Space>
        </Row>
        <Row Style="margin-top:20px">
            <Space>
                <SpaceItem>
                    <Text>邮箱配置：</Text>
                </SpaceItem>
                <SpaceItem>
                    <Text>敬请期待</Text>
                </SpaceItem>
            </Space>
        </Row>
        <Row Style="margin-top:20px">
            <Space>
                <SpaceItem>
                    <Text>运行模式：</Text>
                </SpaceItem>
                <SpaceItem>
                    <Text>敬请期待</Text>
                </SpaceItem>
            </Space>
        </Row>
        <Row Style="margin-top:20px">
            <Space>
                <SpaceItem>
                    <Text>主题模式：</Text>
                </SpaceItem>
                <SpaceItem>
                    <RadioGroup @bind-Value="@UserConfig.Theme" TValue="string">
                        <Radio Value="@("ant-design-blazor.css")">默认主题</Radio>
                        <Radio Value="@("ant-design-blazor.aliyun.css")">阿里云主题</Radio>
                        <Radio Value="@("ant-design-blazor.dark.css")">暗黑主题</Radio>
                        <Radio Value="@("ant-design-blazor.compact.css")">紧凑主题</Radio>
                    </RadioGroup>
                </SpaceItem>
            </Space>

        </Row>

    </ChildContent>
</Card>

@code{
    [Inject]
    UserConfig UserConfig { get; set; }

    public RenderFragment GetPageTitle()=>
       @<div>
           @UserConfig.LanguageService[$"{CurrencyConstant.Page}.{CurrencyConstant.WebConfig}"]
       </div>;
}