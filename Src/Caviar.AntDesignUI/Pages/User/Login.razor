@page "/ApplicationUser/Login"

<Layout Style="@Style" Class="site-layout-background-img">
    <Content Style="padding: 24px;min-height: 280px;">
        <div class="login-NavLogin">
            <div style="padding:30px">
                <Card Bordered="true" Title="@UserConfig.LanguageService[$"{CurrencyConstant.Page}.{CurrencyConstant.UserLogin}"]" Style="width:400px" Hoverable="true">
                    <Body>
                        <Form Model="@ApplicationUser">
                            <FormItem Label="">
                                <AntDesign.Input Placeholder="@UserConfig.LanguageService[$"{CurrencyConstant.Page}.{CurrencyConstant.UserName}"]" Size="large" @bind-Value="@context.UserName">
                                    <Prefix><Icon Type="user" /></Prefix>
                                </AntDesign.Input>
                            </FormItem>
                            <FormItem Label="">
                                <AntDesign.Input Placeholder="@UserConfig.LanguageService[$"{CurrencyConstant.Page}.{CurrencyConstant.Password}"]" Size="large" @bind-Value="@context.Password" Type="password">
                                    <Prefix><Icon Type="lock" /></Prefix>
                                </AntDesign.Input>
                            </FormItem>
                            <Space Direction="DirectionVHType.Vertical" Style="width:100%">
                                <SpaceItem>
                                    <Spin Spinning="Loading">
                                        <Button Type="@ButtonType.Primary" OnClick="SubmitLogin"  Class="submit" Size="large" Block>登&nbsp;录</Button>
                                    </Spin>
                                </SpaceItem>
                                <SpaceItem>
                                    <div class="other">
                                        <a class="register">@UserConfig.LanguageService[$"{CurrencyConstant.Page}.{CurrencyConstant.RegisteredAccount}"]</a>
                                        <a style="float: right;">
                                            @UserConfig.LanguageService[$"{CurrencyConstant.Page}.{CurrencyConstant.ForgetPassword}"]
                                        </a>
                                    </div>
                                </SpaceItem>
                            </Space>
                        </Form>
                    </Body>
                </Card>
            </div>
        </div>
    </Content>
    <CavFooter Style="background:rgb(0 0 0 / 0.00);text-align: center;"></CavFooter>
</Layout>


<style>
    .login-NavLogin {
        position: absolute;
        left: 50%;
        top: 40%;
        transform: translate(-50%, -50%);
    }

    .site-layout-background-img {
        background-repeat: no-repeat !important;
        background-size: 100% 100% !important;
    }
</style>