<Card Title=@("网站配置") Bordered Hoverable>
    <ChildContent>
        <Row>
            <Space>
                <SpaceItem>
                    <Text>手风琴模式：</Text>
                </SpaceItem>
                <SpaceItem>
                    <Tooltip Title="@("点击菜单，收起其他展开的所有菜单，保持菜单聚焦简洁。")">
                        <Switch @bind-Checked="UserConfig.Accordion" />
                    </Tooltip>
                </SpaceItem>
            </Space>
        </Row>
        <Row Style="margin-top:20px">
            <Space>
                <SpaceItem>
                    <Text>Table页：</Text>
                </SpaceItem>
                <SpaceItem>
                    <Switch @bind-Checked="UserConfig.IsTable" />
                </SpaceItem>
            </Space>
        </Row>
        <Row Style="margin-top:20px">
            <Space>
                <SpaceItem>
                    <Text>主题模式：</Text>
                </SpaceItem>
                <SpaceItem>
                    <RadioGroup @bind-Value="@UserConfig.Theme">
                        <Radio Value="@("ant-design-blazor.css")">默认主题</Radio>
                        <Radio Value="@("ant-design-blazor.aliyun.css")">阿里云主题</Radio>
                        <Radio Value="@("ant-design-blazor.dark.css")">暗黑主题</Radio>
                        <Radio Value="@("ant-design-blazor.compact.css")">紧凑主题</Radio>
                    </RadioGroup>
                </SpaceItem>
            </Space>

        </Row>

    </ChildContent>
</Card>

@code{
    [Inject]
    public UserConfig UserConfig { get; set; }
}